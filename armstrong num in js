data1=Number(number.toString().trim())
data=number.toString().split("").map(Number)
let data2=0;
let sum=0;
let sum2=0;
for(let i=0;i<data.length;i++)
{
    sum=Math.pow(data[i],data.length)
    sum2=sum+sum2
}
if(sum2==data1){console.log(`${data1} is an Armstrong number`)}
else {console.log(`${data1} is not an Armstrong number.`)}
